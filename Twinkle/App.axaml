<Application x:Class="Twinkle.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:glitonea="clr-namespace:Glitonea;assembly=Glitonea"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             RequestedThemeVariant="Default">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <glitonea:Glitonea />
                <ResourceInclude Source="avares://Twinkle.UI/Twinkle.UI.axaml" />
                
                <ResourceInclude Source="avares://Twinkle/Resources/Styles/Colors.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <styling:FluentAvaloniaTheme PreferSystemTheme="True"
                                     PreferUserAccentColor="True" />

        <StyleInclude Source="avares://Glitonea.UI/Glitonea.UI.axaml" />
        <StyleInclude Source="avares://Twinkle.UI/Twinkle.UI.Styles.axaml" />
        
        <StyleInclude Source="avares://Twinkle/Resources/Styles/StyleOverrides.axaml" />
        <StyleInclude Source="avares://Twinkle/Resources/Styles/Controls/MainViewContextSelector.axaml" />
    </Application.Styles>
</Application>