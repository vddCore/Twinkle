<UserControl x:Class="Twinkle.View.ContentPages.DisplayControlView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="clr-namespace:Glitonea.Mvvm;assembly=Glitonea"
             xmlns:vm="clr-namespace:Twinkle.ViewModel.ContentPages"
             xmlns:viewModel="clr-namespace:Twinkle.ViewModel"
             xmlns:view="clr-namespace:Twinkle.View"
             DataContext="{mvvm:DataContextSource vm:DisplayControlViewModel}">
    <TransitioningContentControl Content="{Binding CurrentDisplayModeViewModel}">
        <TransitioningContentControl.PageTransition>
            <CrossFade Duration="0:0:0.150" />
        </TransitioningContentControl.PageTransition>
        
        <TransitioningContentControl.DataTemplates>
            <DataTemplate DataType="viewModel:DisplayLinkedControlViewModel">
                <view:DisplayLinkedControlView />
            </DataTemplate>
            
            <DataTemplate DataType="viewModel:DisplaySeparateControlViewModel">
                <view:DisplaySeparateControlView />
            </DataTemplate>
        </TransitioningContentControl.DataTemplates>
    </TransitioningContentControl>
</UserControl>